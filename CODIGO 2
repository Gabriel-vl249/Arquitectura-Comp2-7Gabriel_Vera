numero_binario = entrada()

posicion = len(numero_binario) - 1 #posicion del primer digito por la izquierda

for posicion, digito_string in enumerate(numero_binario[::-1]): #multiplicamos la posicion x2
		digito = int(cadena_digito)
		multiplicacion = digito * 2 ** posicion;
		print(f'Dígito: {digito}, posición: {posicion}, multiplicación: {multiplicacion}')
 
numero_decimal = 0 #sumaremos el resultado de cada multiplicacion:

para posicion, digito_string en enumerate(numero_binario[::-1]):
	numero_decimal += int(digito_string) * 2 ** posicion

print(f'El numero decimal es: {numero_decimal}')

print("¿Cómo se llama?")
nombre = entrada()
print(f"Me alegro de conocerle, {nombre}")
